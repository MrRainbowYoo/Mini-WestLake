.map-wrap {
    height: 75vh;
    overflow: hidden;
    z-index: 0;
}

.map-area {
    width: 100%;
    height: 100%;
    position: relative;
}

#map-img {
    width: 100%;
    height: 100%;
}

.map-postion{
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.position-icon {
    width: 20px;
    height: 20px;
    position: absolute;
    top: -100%;
    animation: move 1s ease-in-out infinite alternate;
}

.position-circle {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-image: linear-gradient(to top, #f77062 0%, #fe5196 100%);
    position: relative;
}

.position-circle::before {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%, -50%, 0);
    width: 80%;
    height: 80%;
    border-radius: 50%;
    background-image: linear-gradient(-20deg, #f794a4 0%, #fdd6bd 100%);
}

.position-info {
    font-size: .8rem;
    font-weight: bold;
    text-shadow: 0 0 5px #fff;
}

@keyframes move {
    from {
        transform: translate3d(0,0,0);
    }
    to {
        transform: translate3d(0,8px,0);
    }
}

.bottom-wrap {
    height: 25vh;
    box-shadow: 0px 5px 50px 20px #ecf0f1;
    position: relative;
    z-index: 2;
}